# Environment Configuration Example
# Copy this file to .env and fill in your values

# Environment
ENVIRONMENT=dev
DEBUG_MODE=true

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=angeldb
DB_USER=angel
DB_PASSWORD=changeme

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# External APIs - News
FRANCEINFO_API_KEY=your-api-key-here
LEMONDE_API_KEY=your-api-key-here
AFP_API_KEY=your-api-key-here
REUTERS_API_KEY=your-api-key-here
BBC_API_KEY=your-api-key-here
GUARDIAN_API_KEY=your-api-key-here

# External APIs - Weather
OPENWEATHER_API_KEY=your-api-key-here
METEOFRANCE_API_KEY=your-api-key-here

# External APIs - Recipes
SPOONACULAR_API_KEY=your-api-key-here
EDAMAM_APP_ID=your-app-id-here
EDAMAM_APP_KEY=your-app-key-here

# External APIs - Scientific
PUBMED_API_KEY=your-api-key-here

# Security
JASYPT_PASSWORD=your-encryption-password
JWT_SECRET=your-jwt-secret-key
API_KEY_MASTER=your-master-api-key

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
GRAFANA_ADMIN_PASSWORD=admin

# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
